        android:layout_marginEnd="32dp"
        android:text="ImePrvogIgraca"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/cetiritvbodoviprvog"
